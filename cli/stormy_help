#!/bin/bash
function upload_help(){
	echo "Description of upload command:"
	echo "'upload' command uploads given files to server."
	echo "Examples:"
	echo "  stormy upload --name name1 --desc 'Example upload' --dir dir2 file1 file2 directory1."
	echo "  Above command will create zip package with file1, file2 and content of directory1, and upload it as package named 'name1' with description 'example upload', the file will be located in dir2 directory on stormy."
	echo "  stormy upload -s file1 file2"
	echo "  Above command will upload file1 and file2 to stormy (without zipping), and store them in directory '/' on stormy"
	echo "Flags description:"
	echo "  --name <name> or -n <name> specify package name"
	echo "  --simple or -s when used the files are not compressed and uploaded as simple files"
	echo "  --autoencrypt or -a autoencrypts uploaded package with password in config"
	echo "  --encrypt or -e asks for password, with that password uploaded package will be encrypted"
	echo "  --link or -l creates link for uploaded files"
	echo "  --onetimelink makes link one time use"
	echo "  --desc 'description of file' add optional description for uploaded files/packages"
	echo "  --force or -f doesn't ask when overwriting existing files in stormy"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "config settings:"
	echo "  autoencrypt when toggled on always autoencrypt files"
	echo "  autoencrypt_pass specify autoencryption password"
	echo "  use_scp_instead_of_api when toogled on files are uploaded with scp instead of https api, ssh acces is necessary"
	echo "  show_md5_for_packages when toogled on shows md5sum for uploaded files locally and on server"
}
function download_help(){
	echo "Description of download command:"
	echo "'download' command downloads files/packages from server."
	echo "Examples:"
	echo "  stormy download --name name1 --dir dir1"
	echo "  Above command downloads file/package name1 located at dir1 on server"
	echo "  stormy download --smart --desc dir2 /dir1/name1"
	echo "  Above command downloads file/package name1 located at dir1 on server and stores it in dir2"
	echo "  stormy download --smart /dir1/dir2/name1 name2 dir3/name3"
	echo "  Above command downloads specified files from stormy."
	echo "Flags description: "
	echo "  --name <name> or -n <name> specify package name"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "  --desc <dir> specifies local target location"
	echo "  --unzip or -u automaticly decompress packages after downloading them"
	echo "  --smart smart search scraps dir from file name, for example /asd/asd/a.cpp is splitted into /asd/asd/ directory and a.cpp filename"
	echo "config settins:"
	echo "  use_smart_search always toggle on smart flag"
	echo "  unzip_default when toogled on automaticly unzips downloaded packages"
	echo "  unzip_ask_default when toogled on creates asking prompt that determines whether package should be decompressed or not"
}
function mkdir_help(){
	echo "Description of mkdir command:"
	echo "'mkdir' command creates directorires on server."
	echo "Examples:"
	echo "  stormy mkdir dir1 /dir2/dir3 dir2/dir4/"
	echo "  Above command creates directories /dir1, /dir2/dir3 and /dir2/dir4 on stormy"
	echo "  stormy mkdir -d dir5"
	echo "  Above command creates directory /dir5 on stormy"
	echo "Flags description:"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
}
function ls_help(){
	echo "Description of ls command:"
	echo "'ls' command lists directories content on stormy."
	echo "Examples:"
	echo "  stormy ls dir1 dir2"
	echo "  Above command list content of directories dir1 and dir2 on stormy"
	echo "  stormy ls -d dir3 --long"
	echo "  Above command list content of directory dir3 in long format"
	echo "  stormy ls dir4 --long"
	echo "  Above command list content of directory dir4 in long format"
	echo "Flags description:"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "  --long writes info in long format"
}
function link_help(){
	echo "Description of link command:"
	echo "'link' manages link's for files on stormy."
	echo "Examples:"
	echo "  stormy link --smart file1 /dir1/file2"
	echo "  Above command creates link for files /file1 and /dir1/file2 on stormy"
	echo "  stormy link --name file3 --dir dir2 --onetimelink --desc description"
	echo "  Above command creates one time link for file /dir2/file3 on stormy, with specified description"
	echo "  stormy link --smart --list /dir1/file1"
	echo "  Above command list links for file /dir1/file1 on stormy"
	echo "  stormy link --smart --list --long /dir1/file1"
	echo "  Above command list links for file /dir1/file1 on stormy in long format"
	echo "  stormy link --remove link_id"
	echo "  Above command removes link with link_id"
	echo "  stormy link --removeall --smart file1"
	echo "  Above command removes all links for file1"
	echo "Flags description:"
	echo "  --name <name> or -n <name> specify package name"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "  --desc <dir> specifies package description"
	echo "  --smart smart search scraps dir from file name, for example /asd/asd/a.cpp is splitted into /asd/asd/ directory and a.cpp filename"
	echo "  --remove removes link with specified id"
	echo "  --removeall removes all links for specified file"
	echo "  --list lists all links for given files"
	echo "  --long writes info in long format"
	echo "  --onetimelink makes link one time use"
	echo "config settins:"
	echo "  use_smart_search always toggle on smart flag"
}
function remove_help(){
	echo "Description of remove command:"
	echo "'remove' command removes files on server."
	echo "Examples:"
	echo "  stormy remove --smart file1 /dir1/file1"
	echo "  Above command removes files /file1 and /dir1/file1 from stormy"
	echo "  stormy remove --name file3 -d dir2"
	echo "  Above command removes file /dir2/file3 from stormy"
	echo "  stormy remove --removedir -d /dir1/dir2"
	echo "  Above command removes files /dir1/dir2/* from stormy and directory /dir1/dir2, dir2 cannot have subdirectories"
	echo "  stormy remove --removedir /dir1/dir2"
	echo "  Above command removes files /dir1/dir2/* from stormy and directory /dir1/dir2, dir2 cannot have subdirectories"
	echo "Flags description:"
	echo "  --name <name> or -n <name> specify package name"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "  --removedir removes directories instead of files"
	echo "config settins:"
	echo "  use_smart_search always toggle on smart flag"
}
function stat_help(){
	echo "Description of stat command:"
	echo "'stat' command prints info about file."
	echo "Examples:"
	echo "  stormy stat --smart file1 dir1/file2"
	echo "  Above command describes file1 and /dir1/file2"
	echo "Flags description:"
	echo "  --name <name> or -n <name> specify package name"
	echo "  --dir <dir_name> or -d <dir_name> select target location on server"
	echo "  --long writes info in long format"
	echo "config settins:"
	echo "  use_smart_search always toggle on smart flag"
}
